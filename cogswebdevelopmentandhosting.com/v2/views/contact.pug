extends layout.pug

block content 

    .container
    form(method="post", action='contact/send')
    h1 Contact 
    .form-group 
    label Name
    input.form-control(type="text", name="name", placeholder="Please enter your name")
    .form-group 
    label Email 
    input.form-control(type="email", name="email", placeholder="Please Enter Your Email")
    .form-group 
    label Message 
    textarea.form-control(name="message", placeholder="Please enter your message")
    button.btn.btn-default(type="submit") Submit
